extends single-client-view

block content
  .panel.panel-primary
      .panel-heading
        .panel-title Edit Client
      .panel-body
        form.form(action="/", method="get", role="form")
          .row
            .col-xs-12.col-md-6
              h4.text-center Client Info
              .grey-box
                .form-group
                  label Last Name
                  input.form-control(type='text' value='Outlaw')
                .form-group
                  label First Name
                  input.form-control(type='text' value='Travis')
                .form-group
                  label Phone Number
                  input.form-control(type='text' value='(999) 123-7766')
                .form-group
                  label Start Date
                  input.form-control(type='date' value='2016-02-15')
                .form-group
                  label Wasatch Log-In ID (Can't be updated)
                  p.grey-box#change-id trout25
                  //- input.form-control(type='text')   
                .form-group
                  label Change Password
                  p
                    button.btn.btn-primary Click to Change Password  
                    |&nbsp; (doesn't do anything for now)    
            .col-md-2
            .col-xs-12.col-md-6
              h4.text-center Account Options
              .grey-box
                .form-group
                  label Client Type
                  select.form-control
                    option In-Patient
                    option Team Player
                    option(selected='selected') X-Factor
                .checkbox
                  label
                    input(type='checkbox')
                    | Allow client to select check-in date.
                    p.help-block If this option is de-selected, the client will only be able to add check-in data for the current day.
              h4.text-center Daily Tasks to Track 
              .grey-box   
                .checkbox
                  label
                    input(type='checkbox' checked)
                    | Attend meeting
                .checkbox
                  label
                    input(type='checkbox' checked)
                    | Meditate
                .checkbox
                  label
                    input(type='checkbox')         
                    | Feed dinosaur   
              br
              button.btn-primary.pull-right Submit
              br
              .grey-box.pull-right
                p
                  .label.label-warning Note
                  |&nbsp;Once we get closer to finalizing the contents on the "Add Patient" form, I'll update this page to match.
          