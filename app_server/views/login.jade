extends ./layouts/1-col

block content
  .row
    .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      .panel.panel-primary.centered
        .panel-heading
          .panel-title  Log In
        .panel-body
          form.form(action='#', method='post', role='form' autocomplete='off' novalidate)
            .form-group
              label Username: &nbsp;
              input.form-control(type='text' name='username' required)
            .form-group
              label Password: &nbsp;
              input.form-control(type='password' name='password' required)
            button.btn.btn-default(type='submit') Submit
      -if(message)
        .alert.alert-warning= message
      -else
        #message-box.alert.alert-warning.invisible
