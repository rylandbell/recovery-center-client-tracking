extends ./layouts/1-col.jade

block content
  link(rel='stylesheet', href='/stylesheets/add-edit-client.css')
  .add-form-panel
    .panel.panel-primary
      .panel-heading
        .panel-title Add New Client
      .panel-body
        .add-form-inside
          form.form(action="/", method="post", role="form")
            .row
              .col-xs-12.col-sm-6
                .grey-box
                  .form-group
                    label Last name
                    input.form-control(type='text' name='last-name')
                  .form-group
                    label First name - Legal
                    input.form-control(type='text' name='first-name')
                  .form-group
                    label First name - Preferred (if different)
                    input.form-control(type='text' name='preferred-name')
                  .form-group
                    label Phone number
                    input.form-control(type='text' name='phone-number')
              .col-xs-12.col-sm-6
                .grey-box
                  .form-group
                    label Create username
                    input.form-control(type='text' name='username')
                  .form-group
                    label Create client password
                    input.form-control(type='text' name='password')
                  p.help-block This client will use the username and password you create to log in.
                button(type='submit').btn.btn-primary.pull-right.btn-submit Submit