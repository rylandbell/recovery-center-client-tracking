extends layout

block content
  link(rel='stylesheet', href='/stylesheets/add-edit-client.css')
  .panel.panel-primary
    .panel-heading
      .panel-title Add New Client
    .panel-body
      form.form(action="/", method="get", role="form")
        .row
          .col-xs-12.col-sm-6
            .grey-box
              .form-group
                label Last name
                input.form-control(type='text')
              .form-group
                label First name - Legal
                input.form-control(type='text')
              .form-group
                label First name - Preferred (if different)
                input.form-control(type='text')
              .form-group
                label Phone number
                input.form-control(type='text')
          .col-xs-12.col-sm-6
            .grey-box
              .form-group
                label Create username
                input.form-control(type='text')
              .form-group
                label Create client password
                input.form-control(type='text')
              p.help-block The client will use the username and password you create to log in.
            button(type='submit').btn.btn-primary.pull-right.btn-submit Submit    
block sidebar
  .grey-box
    h3 Adding a new client
    p This sidebar could hold notes about the new client process, or could be removed.